
@model BanSachOnline.Models.SACH

@{
    ViewBag.Title = "DeleteBook";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}
@{ BanSachOnline.Models.NHANVIEN nv = Session["NV"] as BanSachOnline.Models.NHANVIEN;
    if (nv == null)
    {
        Response.Redirect("/NguoiDung/DangNhap");
    }
}

<h3> Chi Tiết Sách Quản Lý</h3>
<div style="height:40px"></div>
<div class="row text-justify" face="Times New Roman">
    <div class="p-3  ">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/DULIEU/Images/@Model.HINHANH" class="img-fluid rounded-start" alt="...">
            </div>

            <div class="col-md-8">
                <h3> <strong title="@Model.TENSACH"> @Model.TENSACH</strong> <br /></h3>
                <h4>Giá:  <b style="color:red"> @string.Format("{0:0,0}", Model.DONGIABAN) VND</b> </h4>
                <p>Tác Giả: @Model.TACGIA.TENTG </p>
                <p>Nhà Xuất Bản: @Model.NHAXUATBAN.TENNXB</p>
                <p>Thể Loại Sách: @Model.THELOAI.TENTL</p>
                <div class="row g-0 card-text p-3">
                    <p title="@Model.MOTA">Mô tả: @Html.Raw(Model.MOTA)</p>
                </div>
                <div> Số lượng tồn: @Model.SLTON</div>
                <div style="height:5px;"></div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    if (string.Compare(ViewBag.kq, "1", true) == 0)
                    {
                        <h3 style="color:red"> @ViewBag.TB</h3>
                    }
                    else
                    {
                        <div>
                            <input type="submit" value="Bạn Chắc Chắn Muốn Xóa ? " class="btn btn-outline-danger" />

                        </div>
                    }


                }

            </div>
        </div>
    </div>
    <div>

        @Html.ActionLink("Trở về", "IndexAD", "Admin")
    </div>
</div>
<div style="height:40px"></div>
